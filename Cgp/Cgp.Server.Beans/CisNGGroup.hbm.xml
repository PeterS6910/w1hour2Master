<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" default-lazy="true">
  <class name="Contal.Cgp.Server.Beans.CisNGGroup, Cgp.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdCisNGGroup">
      <generator class="guid" />
    </id>
    <property name="LocalAlarmInstruction" not-null="false">
      <column name="LocalAlarmInstruction" sql-type="NVARCHAR(MAX)"></column>
    </property>
    <property name="Description" not-null="false">
      <column name="Description" sql-type="NVARCHAR(MAX)"></column>
    </property>

    <set name="CisNG" table="CisNGCisNGGroupRelation" cascade="none">
      <key column="IdCisNGGroup"></key>
      <many-to-many column="IdCisNG" class="Contal.Cgp.Server.Beans.CisNG"></many-to-many>
    </set>

    <set name="PresentationGroup" table="PGCisNGGroupRelation" cascade="none">
      <key column="IdCisNGGroup"></key>
      <many-to-many column="IdGroup" class="Contal.Cgp.Server.Beans.PresentationGroup"></many-to-many>
    </set>

    <join table="CentralNameRegister">
      <key column="Id" foreign-key="none"/>
      <property name="GroupName" column="Name" not-null="true"/>
      <property name="ObjectType" not-null="true"/>
    </join>

  </class>
</hibernate-mapping>