<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.Server.Beans.TimeZone, Cgp.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdTimeZone">
      <generator class="guid" />
    </id>
    <bag name="DateSettings" cascade="all-delete-orphan">
      <key column="TimeZone" />
      <one-to-many class="Contal.Cgp.Server.Beans.TimeZoneDateSetting"  />
    </bag>
    <many-to-one name="Calendar" column="Calendar" class="Contal.Cgp.Server.Beans.Calendar, Cgp.Server.Beans" not-null="false"/>
    <property name="Description" not-null="false">
      <column name="Description" sql-type="NVARCHAR(MAX)"></column>
    </property>

    <property name="Version" not-null="false"></property>

    <join table="CentralNameRegister">
      <key column="Id" foreign-key="none"/>
      <property name="Name" column="Name" not-null="true"/>
      <property name="ObjectType" not-null="true"/>
    </join>

  </class>
</hibernate-mapping>
