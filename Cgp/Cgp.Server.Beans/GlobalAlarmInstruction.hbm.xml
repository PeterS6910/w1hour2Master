<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.Server.Beans.GlobalAlarmInstruction, Cgp.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdGlobalAlarmInstruction">
      <generator class="guid" />
    </id>
    <property name="Instructions" not-null="false">
      <column name="Instructions" sql-type="NVARCHAR(MAX)"></column>
    </property>

    <join table="CentralNameRegister">
      <key column="Id" foreign-key="none"/>
      <property name="Name" column="Name" not-null="true"/>
      <property name="ObjectType" not-null="true"/>
    </join>

  </class>
</hibernate-mapping>