<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.Server.Beans.SystemEvent, Cgp.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdSystemEvent">
      <generator class="guid" />
    </id>
    <property name="Name" not-null="true" unique="true"></property>

    <set name="PresentationGroups" table="SystemEventPresentationGroup" cascade="none">
      <key column="IdSystemEvent"></key>
      <many-to-many column="IdGroup" class="Contal.Cgp.Server.Beans.PresentationGroup"></many-to-many>
    </set>

    <!--<bag name="PresentationGroups" table="SystemEventPresentationGroup" cascade="all">
      <key column="IdSystemEvent"  unique="true"></key>
      <many-to-many column="IdGroup" class="Contal.Cgp.Server.Beans.PresentationGroup" unique="true"></many-to-many>
    </bag>-->
  </class>
</hibernate-mapping>

