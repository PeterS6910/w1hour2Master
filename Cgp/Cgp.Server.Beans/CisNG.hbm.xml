<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.Server.Beans.CisNG, Cgp.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdCisNG">
      <generator class="guid" />
    </id>
    
    <property name="IpAddress" not-null="true" unique="true"></property>
    <property name="Port" not-null="true"></property>
    <property name="UserName" not-null="true"></property>
    <property name="Password" not-null="true"></property>
    <property name="LocalAlarmInstruction" not-null="false">
      <column name="LocalAlarmInstruction" sql-type="NVARCHAR(MAX)"></column>
    </property>
    <property name="Description" not-null="false">
      <column name="Description" sql-type="NVARCHAR(MAX)"></column>
    </property>
    
    <set name="CisNGGroup" table="CisNGCisNGGroupRelation" cascade="none">
      <key column="IdCisNG"></key>
      <many-to-many column="IdCisNGGroup" class="Contal.Cgp.Server.Beans.CisNGGroup"></many-to-many>
    </set>

    <set name="PresentationGroup" table="PGCisNGRelation" cascade="none">
      <key column="IdCisNG"></key>
      <many-to-many column="IdGroup" class="Contal.Cgp.Server.Beans.PresentationGroup"></many-to-many>
    </set>

    <join table="CentralNameRegister"> 
      <key column="Id" foreign-key="none"/>
      <property name="CisNGName" column="Name" not-null="true"/>
      <property name="ObjectType" not-null="true"/>
    </join>

      </class>
</hibernate-mapping>
