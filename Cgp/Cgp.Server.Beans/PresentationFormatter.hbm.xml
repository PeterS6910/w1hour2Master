<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.Server.Beans.PresentationFormatter, Cgp.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdFormatter">
      <generator class="guid" />
    </id>
    <property name="MessageFormat" not-null="true"></property>
    <property name="Description" not-null="false">
      <column name="Description" sql-type="NVARCHAR(MAX)"></column>
    </property>

    <join table="CentralNameRegister">
      <key column="Id" foreign-key="none"/>
      <property name="FormatterName" column="Name" not-null="true"/>
      <property name="ObjectType" not-null="true"/>
    </join>
  </class>
</hibernate-mapping>
