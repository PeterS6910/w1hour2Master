<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.Server.Beans.Card, Cgp.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdCard">
      <generator class="guid" />
    </id>
    <property name="Number" not-null="true" unique-key="CardSystemNumber"/>
    <property name="FullCardNumber" not-null="true"/>
    <many-to-one name="CardSystem" column="CardSystem" class="Contal.Cgp.Server.Beans.CardSystem, Cgp.Server.Beans" not-null="false" unique-key="CardSystemNumber"/>
    <many-to-one name="Person" column="Person" class="Contal.Cgp.Server.Beans.Person, Cgp.Server.Beans" not-null="false"/>
    <property name="Pin" not-null="true"></property>
    <property name="PinLength" not-null="true"></property>
    <property name="State" not-null="true"></property>
    <property name="DateStateLastChange" not-null="true"></property>
    <property name="UtcDateStateLastChange" not-null="false"></property>
    <property name="LastPrintEncodeTemplate" not-null="false"></property>
    <property name="LocalAlarmInstruction" not-null="false">
      <column name="LocalAlarmInstruction" sql-type="NVARCHAR(MAX)"></column>
    </property>
    <property name="AlternateCardNumber" not-null="false"></property>
    
    <property name="ValidityDateFrom" not-null="false"></property>
    <property name="ValidityDateTo" not-null="false"></property>
    <property name="SynchronizedWithTimetec" not-null="false"></property>
    
    <property name="Description" not-null="false">
      <column name="Description" sql-type="NVARCHAR(MAX)"></column>
    </property>

    <property name="Version" not-null="false"></property>
    
    <join table="CentralNameRegister">
      <key column="Id" foreign-key="none"/>
      <property name="Name" not-null="true"/>
      <property name="ObjectType" not-null="true"/>
      <property name="CkUnique"/>
    </join>
  </class>
</hibernate-mapping>
