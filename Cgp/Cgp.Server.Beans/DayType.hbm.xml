<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.Server.Beans.DayType, Cgp.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdDayType">
      <generator class="guid" />
    </id>
    <bag name="TimeZoneDateSetting" cascade="all">
      <key column="DayType" />
      <one-to-many class="Contal.Cgp.Server.Beans.TimeZoneDateSetting"  />
    </bag>
    <property name="Description" not-null="false">
      <column name="Description" sql-type="NVARCHAR(MAX)"></column>
    </property>

    <property name="Version" not-null="false"></property>
    
    <join table="CentralNameRegister">
      <key column="Id" foreign-key="none"/>
      <property name="DayTypeName" column="Name" not-null="true"/>
      <property name="ObjectType" not-null="true"/>
    </join>
    
  </class>
</hibernate-mapping>