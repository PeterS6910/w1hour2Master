<UserControl x:Class="Contal.Cgp.Components.WpfUpgradeFilesViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="200" Width="300">

    <UserControl.Resources>
        <Style x:Key="NoChromeButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="Chrome" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD"/>
                                <Setter Property="Opacity" TargetName="Chrome" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ListView Margin="0,0,0,0" Name="_lwObjects" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Name="_mainGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="22"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Style="{DynamicResource NoChromeButton}" Name="_bDelete" VerticalAlignment="Center" Margin="2,2,2,2" 
                                Visibility="Hidden" Cursor="Hand" Click="_bDelete_OnClick">
                            <Image Source="Resources/Delete.png" Width="15" Height="15" />
                        </Button>

                        <Button Name="_bUpgrade" Grid.Column="1" Style="{DynamicResource NoChromeButton}" VerticalAlignment="Center" 
                                Visibility="Hidden" Margin="2,2,2,2" Click="_bUpgrade_OnClick" Cursor="Hand">
                            <Image Source="Resources/firmware-upgrade-icon.png" Width="20" Height="15"/>
                        </Button>

                        <Button Name="_bFavorite" Grid.Column="2" Style="{DynamicResource NoChromeButton}" VerticalAlignment="Center" 
                                Visibility="Hidden" Margin="2,2,2,2" Click="_bFavorite_OnClick"  Cursor="Hand">
                            <Image Source="Resources/favorite.png" Width="15" Height="15" />
                        </Button>

                        <TextBlock Grid.Column="3" Text="{Binding}" VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Button Name="_bInsert" Style="{DynamicResource NoChromeButton}" Width="25" Height="25" VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" Margin="2,2,5,5" Click="_bInsert_OnClick" Cursor="Hand">
            <Image Source="Resources/Insert.png" />
        </Button>
    </Grid>
</UserControl>
