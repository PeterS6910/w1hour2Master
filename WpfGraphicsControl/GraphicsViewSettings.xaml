<UserControl x:Class="Cgp.NCAS.WpfGraphicsControl.GraphicsViewSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="163" Width="344" BorderThickness="3" BorderBrush="Blue" Background="White">
    <Grid>
      <Grid.RowDefinitions>
          <RowDefinition Height="35"></RowDefinition>
          <RowDefinition Height="35"></RowDefinition>
          <RowDefinition></RowDefinition>
      </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,0" Name="_lName" Width="50">Name</Label>
        <TextBox Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="80,5,10,2" Name="_tbName" Height="25" />
        
        <Label Grid.Row="1" HorizontalAlignment="Left" Margin="0,0,0,0" Name="_lDescription" Width="80">Description</Label>
        <TextBox Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="80,5,10,2" Name="_tbDescription" Height="25" /> 
                 
        <Button Grid.Row="2" Margin="0,0,100,10" Name="_bOk" Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="74" Click="_bOk_Click">Save</Button>
        <Button Grid.Row="2" Margin="0,0,10,10" Name="_bCancel" Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="74" Click="_bCancel_Click">Cancel</Button>
    </Grid>
</UserControl>
