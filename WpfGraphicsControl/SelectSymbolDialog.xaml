<Window x:Class="Cgp.NCAS.WpfGraphicsControl.SelectSymbolDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select symbol" Height="559" Width="588" Loaded="Window_Loaded" Unloaded="SelectSymbolDialog_OnUnloaded" Name="SelectSymbolDialogWindow">
    <Grid Margin="0,0,0,0" Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <CheckBox Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Name="_chbExistingObject" Width="120" Checked="_chbExistingObject_Checked" Unchecked="_chbExistingObject_Unchecked" IsChecked="True">Existing object</CheckBox>
        <CheckBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Name="_chbOnlySymbol" Width="120" Checked="_chbOnlySymbol_OnChecked" Unchecked="_chbOnlySymbol_Unchecked">Only symbol</CheckBox>
        
        <TextBox Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" Name="_tbFilter" TextChanged="_tbFilter_TextChanged" />
        <ComboBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="5,5,0,5" Name="_cbObjectType" VerticalAlignment="Stretch" Width="220" SelectionChanged="_cbObjectType_OnSelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Picture}" Width="20" Height="20"/>
                        <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" Text="{Binding Text}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <ListView Grid.ColumnSpan="2" Grid.Row ="2"  Margin="5,5,5,5" Name="_lvObjectList" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width = "25">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Picture}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Name}"/>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        <GroupBox Grid.Row="3" Grid.ColumnSpan="2" Header="Categories"  Margin="5,5,5,5" Name="_gbCategories" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
                <CheckBox Grid.Row="0" Grid.Column="0" Margin="5,5,0,0" Name="_chbAccessControl" HorizontalAlignment="Left" VerticalAlignment="Top">Access Control</CheckBox>
                <CheckBox Grid.Row="0" Grid.Column="1" Margin="5,5,0,0" Name="_chbFire" HorizontalAlignment="Left" VerticalAlignment="Top">Fire</CheckBox>
                <CheckBox Grid.Row="1" Grid.Column="0" Margin="5,5,0,0" Name="_chBurglarAlarm" HorizontalAlignment="Left" VerticalAlignment="Top">Burglar Alarm</CheckBox>
                <CheckBox Grid.Row="1" Grid.Column="1" Margin="5,5,0,0" Name="_chbAccessories" HorizontalAlignment="Left" VerticalAlignment="Top">Accessories</CheckBox>   
            </Grid>    
        </GroupBox>
        
        <ListView Grid.ColumnSpan="2" Grid.Row ="4"  Margin="5,5,5,5" Name="_lvSymbols" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Picture}" Height="35" Width="35"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock Text="{Binding Text}"/>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Button Height="26" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Margin="0,5,10,0" Name="_bSelect" VerticalAlignment="Top" Width="83" Click="_bSelect_Click">Select</Button>
        <Button Height="26" Grid.Row="5" Grid.Column="1" Margin="10,5,0,0" Name="_bCancel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="83" Click="_bCancel_Click">Cancel</Button>
    </Grid>
</Window>
