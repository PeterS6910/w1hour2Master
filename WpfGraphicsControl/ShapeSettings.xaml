<UserControl x:Class="Cgp.NCAS.WpfGraphicsControl.ShapeSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Width="360" Loaded="Window_Loaded" Background="White" BorderBrush="CadetBlue" BorderThickness="1">
    <Grid Name="myGrid" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="65"></RowDefinition>
            <RowDefinition Height="65"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Height="28" Name="_lObjectName" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,5,5,5" FontSize="12" 
               FontWeight="Bold">Object name</Label>
        
        <Label Grid.Row="1" Height="28" Name="_lLineWidth" VerticalAlignment="Top" HorizontalAlignment="Left" Width="71" Margin="0,12,0,0">Line width</Label>
        <TextBox Grid.Row="1" Height="26" Margin="70,14,170,0" Name="_tbLineWidth" VerticalAlignment="Top" />
        <Label Grid.Row="1" Height="28" Margin="0,12,53,0" Name="_lLineColor" VerticalAlignment="Top" HorizontalAlignment="Right" Width="71">Line color</Label>
        <xctk:ColorPicker Grid.Row="1" Margin="0,12,12,0" Name="_cpLineColor" VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="47" />
            
        <Label Grid.Row="1" Height="28" Margin="0,46,0,0" Name="_lBackgroundColor" VerticalAlignment="Top" HorizontalAlignment="Left" Width="104">
            Background color</Label>
        <xctk:ColorPicker Grid.Row="1" Height="22" Width="47" Margin="75,46,144,0" Name="_cpBackgroundColor" VerticalAlignment="Top" 
                          SelectedColorChanged="_cpBackgroundColor_SelectedColorChanged" />
        
        <TextBox Grid.Row="2" Height="26" Width="260" Margin="12,35,70,0" VerticalAlignment="Top" HorizontalAlignment="Left" Name="_tbImageSource" />
        <Label Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,0" Name="_lImageSource" Width="120">Image source</Label>
        <Button Grid.Row="2" Height="23" HorizontalAlignment="Right" Margin="12,35,12,0" Name="_bAddImageSource" VerticalAlignment="Top" Width="47" 
                Click="_bAddImageSource_Click">...</Button>
        
        <Label Grid.Row="3" Height="25" HorizontalAlignment="Left" Margin="0,5,0,0" Name="_lSelectedLayer" VerticalAlignment="Top" Width="120">Selected layer</Label>
        <ComboBox Grid.Row="3" Margin="12,30,12,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Name="_cbLayers" />

        <GroupBox Grid.Row="4" Grid.ColumnSpan="2" Header="Categories"  Margin="5,5,5,5" Name="_gbCategories" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <CheckBox Grid.Row="0" Grid.Column="0" Margin="5,5,0,0" Name="_chbAccessControl" HorizontalAlignment="Left" VerticalAlignment="Top">
                    Access Control</CheckBox>
                <CheckBox Grid.Row="0" Grid.Column="1" Margin="5,5,0,0" Name="_chbFire" HorizontalAlignment="Left" VerticalAlignment="Top">
                    Fire</CheckBox>
                <CheckBox Grid.Row="1" Grid.Column="0" Margin="5,5,0,0" Name="_chBurglarAlarm" HorizontalAlignment="Left" VerticalAlignment="Top">
                    Burglar Alarm</CheckBox>
                <CheckBox Grid.Row="1" Grid.Column="1" Margin="5,5,0,0" Name="_chbAccessories" HorizontalAlignment="Left" VerticalAlignment="Top">
                    Accessories</CheckBox>
            </Grid>
        </GroupBox>

        <Label Grid.Row="5" Margin="0,0,0,0" Name="_lSelectedObject" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="25.96">
            Selected object</Label>
        <ComboBox Grid.Row="5" Margin="12,25,12,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Name="_cbObjects" />
        <Button Grid.Row="5" Height="23" HorizontalAlignment="Right" Margin="85,8,12,5" Name="_bRemoveObject" VerticalAlignment="Bottom" Width="100" 
                Click="_bRemoveObject_OnClick">Remove object</Button>
        
        <Label Grid.Row="6" Margin="0,0,0,0" Name="_lSelectedScene" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="25.96">Selected scene</Label>
        <ComboBox Grid.Row="6" Margin="12,25,12,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Name="_cbScenes" />
        <Button Grid.Row="6" Height="23" HorizontalAlignment="Right" Margin="85,8,12,5" Name="_bRemoveScene" VerticalAlignment="Bottom" 
                Width="100" Click="_bRemoveScene_OnClick">Remove scene</Button>
               
        <Button Grid.Row="7" Height="23" HorizontalAlignment="Right" Margin="85,8,85,5" Name="_bOk" VerticalAlignment="Bottom" Width="71" Click="_bOk_Click">
            Apply</Button>
        <Button Grid.Row="7" Height="23" HorizontalAlignment="Right" Margin="0,8,5,5" Name="_bCancel" VerticalAlignment="Bottom" Width="71" Click="_bCancel_Click">
            Cancel</Button>
    </Grid>
</UserControl>
