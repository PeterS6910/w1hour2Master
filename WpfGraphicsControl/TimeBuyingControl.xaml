<UserControl x:Class="Cgp.NCAS.WpfGraphicsControl.TimeBuyingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Height="80" Width="250" Background="White" BorderBrush="CadetBlue" BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Height="28" Name="_lAlarmAreaName" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,5,5,5" FontSize="12" FontWeight="Bold">Alarm area name</Label>
        
        <xctk:DateTimeUpDown Format="Custom" FormatString="HH:mm:ss" Value="00:00:00" Height="25" Width="80" Grid.Row="2" 
                             Name="_dtTimeToBuy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0"/>
        
        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,80,0" Height="25" Width="70" 
                Name="_bBuyTime" Click="_bBuyTime_OnClick">Buy time</Button>
        <Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Height="25" Width="70" 
                Name="_bClose" Click="_bClose_OnClick">Close</Button>
    </Grid>
</UserControl>
