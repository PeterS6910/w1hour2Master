<UserControl x:Class="Cgp.NCAS.WpfGraphicsControl.SceneSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Loaded="Window_Loaded" Background="White">
    <Grid Name="myGrid"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="65"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <GroupBox Grid.Row="4"  Header="Default shape parameters" Margin="0,0,0,0" Name="_gbDefaultShapeParameters">
            <Grid Margin="0,5,0,0">
                <Label Height="28" Name="_lLineWidth" VerticalAlignment="Top" HorizontalAlignment="Left" Width="67" Margin="0,5,0,0">Line width</Label>
                <xctk:DoubleUpDown Height="25" Width="62" FormatString="F2" Value="1" Increment="0.25" Maximum="10" Minimum="0" HorizontalAlignment="Left" Margin="64,6,0,0" VerticalAlignment="Top" Name="_tbLineWidth" />
                <Label Height="28" Margin="132,5,134,0" Name="_lLineColor" VerticalAlignment="Top">Line color</Label>
                <xctk:ColorPicker Margin="196,6,0,0" Name="_cpLineColor" VerticalAlignment="Top" Height="22" HorizontalAlignment="Left" Width="47"></xctk:ColorPicker>
                <Label Height="28" Margin="249,3,198,0" Name="_lBackgroundColor" VerticalAlignment="Top">Background color</Label>
                <xctk:ColorPicker Height="22" HorizontalAlignment="left" Margin="353,6,0,0" Name="_cpBackgroundColor" VerticalAlignment="Top" Width="47" />
            </Grid>
        </GroupBox>
        
        <Label Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Name="_lSceneName" Width="45">Name</Label>
        <TextBox Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="50,10,5,0" Name="_tbSceneName" />
        
        <Label Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Name="_lSceneDescription" Width="80">Description</Label>
        <TextBox Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="75,10,5,0" Name="_tbSceneDescription" />
        
        <Label Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Name="_lSymbolSize" Width="80">Symbol size</Label>
        <ComboBox Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,10,0,0" Name="_cbSymbolSize" Width="150" />
        <Label Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,5,0,0" Name="_lSymbolTemplate" Width="100">Symbol template</Label>
        <ComboBox Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="380,10,0,0" Name="_cbSymbolTemplate" Width="150" />
        
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Name="_lSpecifiedScale" Width="220
               " Grid.Row="3">Scale to be specified (in metres)</Label>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,35,0,0" Name="_lModelLength" Width="50" Grid.Row="3">Length</Label>
        <TextBox Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,40,5,0" Name="_tbSpecifiedScaleLength" Width="100"/>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,5,0,0" Name="_lImplicityScaleOfSymbols" Width="250" Grid.Row="3">Implicity scale of symbols (1 : x)</Label>
        <xctk:DecimalUpDown Width="70" HorizontalAlignment="Left" VerticalAlignment="Top" Name="_tbImplicityScale" Margin="255,40,0,0" Grid.Row="3" FormatString="F0" Value="50" Increment="1" Maximum="5000" Minimum="10" />
        
        <Button Grid.Row="5" Height="25" HorizontalAlignment="Right" Margin="0,5,80,5" Name="_bOk" VerticalAlignment="Bottom" Width="71" Click="_bOk_Click">Ok</Button>
        <Button Grid.Row="5" Height="25" HorizontalAlignment="Right" Margin="0,5,5,5" Name="_bCancel" VerticalAlignment="Bottom" Width="71" Click="_bCancel_Click">Cancel</Button>
    </Grid>
</UserControl>
