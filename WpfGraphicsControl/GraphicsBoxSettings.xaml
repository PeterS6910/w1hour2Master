<UserControl x:Class="Cgp.NCAS.WpfGraphicsControl.GraphicsBoxSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    MinHeight="500" MinWidth="300" Loaded="GraphicsBoxSettings_OnLoaded" Background="White" BorderThickness="1" BorderBrush="Blue">
    <Grid>
          <Grid.RowDefinitions>
              <RowDefinition Height="25"></RowDefinition>
              <RowDefinition Height="30"></RowDefinition>
              <RowDefinition Height="120"></RowDefinition>
              <RowDefinition Height="55"></RowDefinition>
              <RowDefinition Height="125"></RowDefinition>
              <RowDefinition Height="125"></RowDefinition>
              <RowDefinition Height="*"></RowDefinition>
          </Grid.RowDefinitions>
        <Label Grid.Row="0" Height="28" HorizontalAlignment="Left" Name="_lGraphicsBoxName" VerticalAlignment="Top" Width="280" FontWeight="Bold">Graphics Box</Label>
        
        <Label Grid.Row="1" Height="30" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="_lSceneBoxName" VerticalAlignment="Top">Name</Label>
        <TextBox Grid.Row="1" Height="25" HorizontalAlignment="Stretch" Margin="50,3,5,0" Name="_tbSceneBoxName" VerticalAlignment="Top" />
        
        <GroupBox Grid.Row="2" Header="Alingnment" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="_gbAlignment" VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0" Height="28" HorizontalAlignment="Left" Margin="0,0,0,0" Name="_lHorizontalAlignment" VerticalAlignment="Top" Width="120">Horizontal</Label>
                <ComboBox Grid.Row="0" Height="23" Margin="5,25,0,0" Name="_cbHorizontalAlignment" VerticalAlignment="Top" HorizontalAlignment="Left" Width="170" />

                <Label Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="0,0,0,0" Name="_lVerticalAlignment" VerticalAlignment="Top" Width="120">Vertical</Label>
                <ComboBox Grid.Row="1" Height="23" Margin="5,25,0,0" Name="_cbVerticalAlignment" VerticalAlignment="Top" HorizontalAlignment="Left" Width="170" />
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="3" Header="Position" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="_gbPosition">
            <Grid>
                <Label HorizontalAlignment="Left" Name="_lLeft" Width="30" Height="25" VerticalAlignment="Top">Left</Label>
                <!--<TextBox Height="25" Margin="36,3,0,0" Name="_tbLeft" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" />//-->
                <xctk:DecimalUpDown Name="_tbLeft" Grid.Row="2" Width="50" Height="25"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="36,3,0,0" />
                <Label HorizontalAlignment="Left" Name="_lTop" Width="30" Height="30" VerticalAlignment="Top" Margin="100,0,0,0">Top</Label>
                <!--<TextBox Height="25" Margin="136,3,0,0" Name="_tbTop" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" />//-->
                <xctk:DecimalUpDown Name="_tbTop" Grid.Row="2" Width="50" Height="25"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="136,3,0,0" />
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="4" Header="Size" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="_gbSize">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                
                <Label Grid.Row="0" HorizontalAlignment="Left" Name="_lWidth" Width="45" Height="25" VerticalAlignment="Top">Width</Label>
                <!--<TextBox Grid.Row="0"  Height="25" Margin="46,3,0,0" Name="_tbWidth" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" />//-->
                <xctk:DecimalUpDown Name="_tbWidth" Grid.Row="0" Width="50" Height="25"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="46,3,0,0" />
                <CheckBox Grid.Row="0" HorizontalAlignment="Left" Margin="120,8,0,2" Name="_chbPercentuallyWidth" Width="120">PercentuallyWidth</CheckBox>
                
                <Label Grid.Row="1" HorizontalAlignment="Left" Name="_lHeight" Width="45" Height="30" VerticalAlignment="Top" Margin="0,0,0,0">Height</Label>
                <!--<TextBox Grid.Row="1" Height="25" Margin="46,3,0,0" Name="_tbHeight" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" />//-->
                <xctk:DecimalUpDown Name="_tbHeight" Grid.Row="1" Width="50" Height="25"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="46,3,0,0" />
                <CheckBox Grid.Row="1" HorizontalAlignment="Left" Margin="120,8,0,2" Name="_chbPercentuallyHeight" Width="120">PercentuallyHeight</CheckBox>
                
                <Label Grid.Row="2" HorizontalAlignment="Right" Name="_lBorderColor" Width="90" Height="30" VerticalAlignment="Top" Margin="0,2,45,0">BorderColor</Label>
                <xctk:ColorPicker Grid.Row="2" Margin="0,5,5,0" Name="_cpBorderColor" VerticalAlignment="Top" Height="22" HorizontalAlignment="Right" Width="47" />
                <Label Grid.Row="2" HorizontalAlignment="Left" Name="_lBorderWidth" Width="90" Height="30" VerticalAlignment="Top" Margin="0,2,0,0">BorderWidth</Label>
                <xctk:DecimalUpDown Name="_tbBorderWidth" Grid.Row="2" Width="50" Height="25"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="85,4,0,0" />
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="5" Header="SceneSettings" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="_gbSceneSettings">
            <Grid>
                <Label HorizontalAlignment="Stretch" Name="_lSelectedScene" Height="30" VerticalAlignment="Top">SelectedScene</Label>
                <ComboBox Margin="5,25,0,0" Name="_cbScenes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" />
                <Label Margin="0,50,0,0" HorizontalAlignment="Stretch" Name="_lSceneLinkTarget" Height="30" VerticalAlignment="Top">SceneLinkTarget</Label>
                <ComboBox Margin="5,75,0,0" Name="_cbSceneBoxs" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" />

            </Grid>
        </GroupBox>
        
        <Button HorizontalAlignment="Right" Margin="0,0,5,5" Name="_bApply" Width="75" Height="25" VerticalAlignment="Bottom" Grid.Row="6" Click="_bApply_Click">Apply</Button>
    </Grid>  
</UserControl>
