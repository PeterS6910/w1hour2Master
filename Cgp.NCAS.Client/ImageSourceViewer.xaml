<UserControl x:Class="Contal.Cgp.NCAS.Client.ImageSourceViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <ListView Margin="0,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Name="_lvImageSources" SelectionChanged="_lvImageSources_SelectionChanged">
        <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding Source}" Height="50" Width="50"/>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</UserControl>
