<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.NCAS.Server.Beans.Floor, Cgp.NCAS.Server.Beans" select-before-update="true">
    <cache usage="read-write"/>
    <id name="IdFloor">
      <generator class="guid" />
    </id>
    <property name="FloorNumber" not-null="false"/>
    <many-to-one name="BlockAlarmArea" column="BlockAlarmArea" class="Contal.Cgp.NCAS.Server.Beans.AlarmArea" not-null="false"/>

    <set name="Doors" cascade="none" lazy="true">
      <key column="Floor"/>
      <one-to-many class="Contal.Cgp.NCAS.Server.Beans.MultiDoorElement"/>
    </set>
    
    <property name="Description" not-null="false">
      <column name="Description" sql-type="NVARCHAR(MAX)"></column>
    </property>

    <join table="CentralNameRegister">
      <key column="Id" foreign-key="none"/>
      <property name="Name" column="Name" not-null="true"/>
      <property name="ObjectType" not-null="true"/>
    </join>
  </class>
</hibernate-mapping>
